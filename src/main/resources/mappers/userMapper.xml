<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.sns.user.dao.UserDAO">
 	<!-- 아이디 중복 -->
 	<select id="existLoginId" resultType="boolean" parameterType="String">
 		SELECT
 			COUNT(*)
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 	</select>
 	
 	<!-- 회원가입 -->
 	<insert id="insertUserSignupByLoginIdPasswordNameEmail" parameterType="map">
 		INSERT INTO `user`
 		(
 			`loginId`
			,`password`
			,`name`
			,`email`
			,`createdAt`
			,`updatedAt`
 		)
 		VALUES
 		(
 			#{loginId}
 			,#{password}
 			,#{name}
 			,#{email}
 			,NOW()
 			,NOW()
 		)
 	</insert>
 	
 	<!-- 비밀번호 찾기 -->
 	<select id="findPasswordByIdNameEmail" resultType="boolean" parameterType="String">
 		SELECT
 			COUNT(*)
 		FROM
 			`user`
 		WHERE
 			`loginId` = #{loginId}
 			AND `name` = #{name}
 			AND `email` = #{email}
 	</select>
 	
 	<!-- 로그인 -->
 	<select id="selectUserByLoginIdPassword" resultType="com.sns.user.model.User" parameterType="map">
 		SELECT
 			`id`
			,`loginId`
			,`password`
			,`name`
			,`email`
			,`profileImgPath`
			,`statusMessage`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`loginId` = #{loginId}
			AND `password` = #{password}
 	</select>
 	
 	<!-- 유저정보(개인홈페이지) -->
 	<select id="selectUserByUserId" resultType="com.sns.user.model.User" parameterType="int">
 		SELECT
 			`id`
			,`loginId`
			,`password`
			,`name`
			,`email`
			,`profileImgPath`
			,`statusMessage`
			,`createdAt`
			,`updatedAt`
		FROM
			`user`
		WHERE
			`id` = #{userId}
 	</select>
 	
 </mapper>